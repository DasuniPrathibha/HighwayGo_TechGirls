<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/busimage"
            android:layout_centerVertical="true"
            android:id="@+id/image_list"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/busNameList"
            android:text="This is bName"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/image_list"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/busNoList"
            android:text="This is bNo"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/image_list"
            android:layout_below="@+id/busNameList"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fromList"
            android:text="This is from"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/image_list"
            android:layout_below="@+id/busNoList"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telephoneList"
            android:text="This is telephone"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/image_list"
            android:layout_below="@+id/fromList"
            android:layout_marginLeft="10dp"
            />

    <TextView
        android:id="@+id/toList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telephoneList"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_list"
        android:text="This is to"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>